<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.AddServerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <EditText
        android:id="@+id/nameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_name"
        android:gravity="center_horizontal"
        android:imeOptions="actionNext"
        android:inputType="text|textNoSuggestions"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/textView_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nameField"
        android:text="Address"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <EditText
        android:id="@+id/addressField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nameField"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_address"
        android:gravity="center_horizontal"
        android:imeOptions="actionNext"
        android:inputType="textUri|textNoSuggestions"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/textView_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addressField"
        android:text="Port"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <EditText
        android:id="@+id/portField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_port"
        android:autoText="false"
        android:gravity="center_horizontal"
        android:hint="(Optional)"
        android:imeOptions="actionNext"
        android:inputType="number|textNoSuggestions"
        android:numeric="integer"
        android:phoneNumber="false"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/usrDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/portField"
        android:layout_centerHorizontal="true"
        android:text="User Details"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/textView_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/usrDetails"
        android:text="Nick"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <EditText
        android:id="@+id/nickField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/portField"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_nick"
        android:autoText="false"
        android:gravity="center_horizontal"
        android:hint="(Optional)"
        android:imeOptions="actionNext"
        android:inputType="text|textNoSuggestions"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/textView_usrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nickField"
        android:text="Username"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <EditText
        android:id="@+id/usernameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nickField"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_usrName"
        android:autoText="false"
        android:gravity="center_horizontal"
        android:imeOptions="actionNext"
        android:inputType="text|textNoSuggestions"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/textView_realName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/usernameField"
        android:text="Real Name"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <EditText
        android:id="@+id/realNameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/usernameField"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_realName"
        android:autoText="false"
        android:gravity="center_horizontal"
        android:hint="(Optional)"
        android:imeOptions="actionNext"
        android:inputType="text|textNoSuggestions"
        android:singleLine="true"/>

        <Button
            android:id="@+id/saveBtn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/usrDetails"
            android:layout_alignStart="@+id/usrDetails"
            android:layout_below="@+id/realNameField"
            android:text="Save Server"/>


    </RelativeLayout>
</ScrollView>
